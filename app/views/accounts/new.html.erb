<% if current_user %>
<hr>
<h1>Eine Konto-Seite hinzufügen</h1>
<hr>
<%= form_for @account do |f| %>

<% if @account.errors.any? %>
<h2>Errors:
	<ul>
		<% @account.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
<% end %>

	<p>
		<%= f.label :title %><br />
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.submit "Hinzufügen"; %>
	</p>
<% end %>
	
<% else %>

<p>
	Sie habe keine Berechtigung, diesen Inhalt zu sehen.
</p>

<% end %>